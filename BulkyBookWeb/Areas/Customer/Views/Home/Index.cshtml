@model IEnumerable<Product>


<div class="row pb-3 ms-5 me-5">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.imageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h6 text-primary text-center fw-bold">@product.Title</p>
                                <p class="card-title text-secondary text-end">by @product.Author</p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <strike><b>@product.ListPrice.ToString("0.00") Lei</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>@product.Price100.ToString("0.00") Lei</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary form-control">Details</a>
                     </div>
                </div>
            </div>
        </div>
    }
</div>
